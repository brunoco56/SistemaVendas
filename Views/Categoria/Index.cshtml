@model List<SistemaVendas.Entidades.Categoria>;
<div>
    <div class="container">

        <div class="row">
            <div class="col-sm-3">
                <div class="input-group">
                    <input type="search" id="search-input" class="form-control rounded" placeholder="Procurar" aria-label="Procurar"
                           aria-describedby="search-addon" />
                    <button type="button" id="search-button" class="btn btn-outline-primary">Procurar</button>
                </div>
            </div><br />

            <div class="col-sm-7">
            </div><br />

            <div class="col-sm-2">
                <input type="button" value="Cadastrar" class="btn btn-info"
                       onclick="location.href='@Url.Action("Cadastro")'" />
            </div>

        </div>

    </div>
    <br />
    <table id="tabela_cadastro" class="table">
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Descrição</th>
                <th> Ações</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <th scope="row">@item.Codigo</th>
                    <th><a href="../Categoria/Detalhe\@item.Codigo"> @item.Descricao</a></th>
                    <th><button class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" onclick="setaDadosModal('@item.Descricao')">Excluir</button></th>
            </tbody>
        }
    </table>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Deseja mesmo excluir isto?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <h3 id="p_texto1">Dados incorretos</h3>
                <h3 id="campo"></h3>
                <!--
                    <form id="modalExemplo" method="post" action="">
                        <input type="text" name="campo" id="campo">
                    </form>
                -->
            </div>
            <div class="modal-footer">                
                <button type="button" class="btn btn-danger"  onclick="">Excluir</button>              
            </div>
        </div>
    </div>
</div>


<script>
    function setaDadosModal(valor) {
        document.getElementById('campo').value = valor;
        document.getElementById("p_texto1").innerHTML = (valor);
    }
</script>